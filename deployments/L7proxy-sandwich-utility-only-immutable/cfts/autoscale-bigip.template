  "Parameters": {
    "deploymentName" : {
      "Description" : "Deployment Name - Used in creating objects",
      "Type" : "String",
      "MaxLength": 20,
      "Default": "my_demo"
    },
    "vpc": {
      "Description": "Common VPC for whole deployment",
      "Type": "AWS::EC2::VPC::Id"
    },
    "availabilityZones": {
      "Description": "Availability zones in which BIG-IP is being deployed",
      "Type": "List<AWS::EC2::AvailabilityZone::Name>"
